[flake8]
ignore = E203, E266, E501, W503
# line length is intentionally set to 80 here because Bugbear is used
max-line-length = 80
max-complexity = 18
per-file-ignores =
    migrations/env.py: E402
    # TODO: The F821s are necessary until there is a released version of
    # pyflakes that includes https://github.com/PyCQA/pyflakes/pull/455.
    awards/db.py: F821
    awards/models.py: F821
    tests/conftest.py: F821
    tests/test_models.py: F821
select = B,C,E,F,W,T4,B9
